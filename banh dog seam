 local Toggle = MainTab:CreateToggle({
	Name = "ESP.Enemies / មើលតែសត្រូវប៉ណ្ណោះ / មើលមនុស្សពិតទាំងអស់",
	CurrentValue = false,
	Flag = "Esp_Toggle",
	Callback = function(Value)
		_G.TeamCheck = Value
	end,
})

