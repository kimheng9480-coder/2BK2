local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()

local function destroyIfExists(path)
    if path then
        path:Destroy()
    end
end

destroyIfExists(character:FindFirstChild("SPH_Character") and character.SPH_Character:FindFirstChild("FallDamage"))
destroyIfExists(character:FindFirstChild("SPH_Character") and character.SPH_Character:FindFirstChild("RigUpdater"))
destroyIfExists(character:FindFirstChild("SPH_Character") and character.SPH_Character:FindFirstChild("FirstPersonVisibility"))



